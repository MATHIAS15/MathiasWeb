
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-sm-3">
        <!-- left -->
        <h3><i class="glyphicon glyphicon-briefcase"></i> Settings</h3>
        <hr>

        <ul class="nav nav-stacked">
            <li><a href="javascript:;"><i class="glyphicon glyphicon-user"></i> Accounts</a></li>
            <li><a href="javascript:;"><i class="glyphicon glyphicons-user-add"></i> Add Accounts</a></li>
            <li><a href="javascript:;"><i class="glyphicon glyphicons-sun"></i> Météo</a></li>
            <li><a href="javascript:;"><i class="glyphicon glyphicons-message-in"></i> Mail</a></li>
            <li><a href="javascript:;"><i class="glyphicon glyphicons-flash"></i> Network</a></li>
            <li><a href="javascript:;"><i class="glyphicon glyphicon-plus"></i> More informations...</a></li>
        </ul>

        <hr>

    </div><!-- /span-3 -->
    <div class="col-sm-9">

        <!-- column 2 -->
        <h3><i class="glyphicon glyphicon-dashboard"></i> Dashboard</h3>

        <hr>

        <div class="row">
            <!-- center left-->

            <div class="panel panel-default">
                <div class="panel-heading"><h4>Processing Status</h4></div>
                <div class="panel-body">

                    <small>Complete</small>
                    <div class="progress">
                        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="72" aria-valuemin="0" aria-valuemax="100" style="width: 72%">
                            <span class="sr-only">72% Complete</span>
                        </div>
                    </div>
                    <small>In Progress</small>
                    <div class="progress">
                        <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                            <span class="sr-only">20% Complete</span>
                        </div>
                    </div>
                    <small>At Risk</small>
                    <div class="progress">
                        <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%">
                            <span class="sr-only">80% Complete</span>
                        </div>
                    </div>
                </div><!--/panel-body-->
            </div><!--/panel-->

        </div><!--/col-->
        <!--center-right-->


    </div><!--/row-->
</div><!--/col-span-9-->


